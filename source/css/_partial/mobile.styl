}
.overlay{
    .slider-trigger{
        position: absolute;
        z-index: 101;
        bottom: 0;
        left: 0;
        width: 42px;
        height: 42px;
        &:hover{
            background: #444;
        }
        &:before{
            color: #ddd;
            content: "\f00b";
            font: 16px FontAwesome;
            width: 16px;
            height: 16px;
            margin-left: 9px;
            margin-top: 14px;
            display: block;
        }
    }
    .search-icon {
        position: absolute;
        display: block;
        z-index: 101;
        bottom: 12px;
        left: 30px;
        margin-top: 2px;
        margin-left: 3px;
        width: 12px;
        height: 12px;
        border: solid 2px #ddd;
        border-radius: 100%;
        -webkit-transform: rotate(-45deg);
        transform: rotate(-45deg);
        &:before {
            content: '';
            position: absolute;
            top: 12px;
            left: 5px;
            height: 6px;
            width: 1px;
            background-color: #ddd;
        }
    }
    .animation-info {
        position: absolute;
        color: #ddd;
        right: 30px;
        bottom: 10px;
    }
    .animation-on {
        position: absolute;
        right: 10px;
        bottom: 8px;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        border: solid 1px #ddd;
        margin-left: 2px;
        margin-top: 2px;
        background: #ddd;
        &:before {
            content: '';
            position: absolute;
            left: 4px;
            top: 4px;
            width: 7px;
            height: 4px;
            border-bottom: solid 1px #ddd;
                border-bottom-color: rgb(51, 51, 51);
            border-left: solid 1px #ddd;
                border-left-color: rgb(51, 51, 51);
            -webkit-transform: rotate(-45deg);
            transform: rotate(-45deg);
        }
    }
    .animation-off {
        position: absolute;
        right: 10px;
        bottom: 8px;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        border: solid 1px #ddd;
        margin-left: 2px;
        margin-top: 2px;
        background: #ddd;
        &:before {
            content: '';
            position: absolute;
            left: 3px;
            top: 7px;
            width: 9px;
            height: 1px;
            background-color: rgb(51, 51, 51);
            -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
        }
        &:after {
            content: '';
            position: absolute;
            left: 3px;
            top: 7px;
            width: 9px;
            height: 1px;
            background-color: rgb(51, 51, 51);
            -webkit-transform: rotate(-45deg);
            transform: rotate(-45deg);
        }
    }
}
